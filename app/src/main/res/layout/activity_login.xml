<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOrangeBackground"
    android:padding="16dp"
    tools:context=".ui.activity.LoginActivity">

    <EditText
        android:id="@+id/activity_login_edt_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/activity_login_edt_senha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/senha"
        android:hint="@string/senha"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/activity_login_edt_email"
        app:layout_constraintStart_toStartOf="@+id/activity_login_edt_email"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_edt_email" />

    <Button
        android:id="@+id/activity_login_btn_cancelar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_orange"
        android:text="@string/cancelar"
        android:layout_marginEnd="4dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toStartOf="@+id/activity_login_btn_entrar"
        app:layout_constraintStart_toStartOf="@+id/activity_login_edt_senha"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_edt_senha" />

    <Button
        android:id="@+id/activity_login_btn_entrar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_orange"
        android:text="@string/entrar"
        android:layout_marginStart="4dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toEndOf="@+id/activity_login_btn_cancelar"
        app:layout_constraintEnd_toEndOf="@+id/activity_login_edt_senha"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_edt_senha" />

</androidx.constraintlayout.widget.ConstraintLayout>