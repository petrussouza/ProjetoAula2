<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOrangeBackground"
    android:padding="16dp"
    tools:context=".ui.activity.ResumoLoginActivity">

    <TextView
        android:id="@+id/activity_resumo_login_txt_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/activity_resumo_login_txt_senha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/activity_resumo_login_txt_email"
        app:layout_constraintStart_toStartOf="@+id/activity_resumo_login_txt_email"
        app:layout_constraintTop_toBottomOf="@+id/activity_resumo_login_txt_email" />

    <Button
        android:id="@+id/activity_resumo_login_btn_lista_tarefas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_orange"
        android:contentDescription="@string/lista_de_tarefas"
        android:text="@string/lista_de_tarefas"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/activity_resumo_login_txt_senha"
        app:layout_constraintStart_toStartOf="@+id/activity_resumo_login_txt_senha"
        app:layout_constraintTop_toBottomOf="@+id/activity_resumo_login_txt_senha" />

</androidx.constraintlayout.widget.ConstraintLayout>