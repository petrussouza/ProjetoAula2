<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/dialog_formulario_tarefas_edt_tarefa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/tarefa"
        android:contentDescription="@string/tarefa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/dialog_formulario_tarefas_spn_dia_semana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/dialog_formulario_tarefas_edt_tarefa"
        app:layout_constraintStart_toStartOf="@+id/dialog_formulario_tarefas_edt_tarefa"
        app:layout_constraintTop_toBottomOf="@+id/dialog_formulario_tarefas_edt_tarefa" />

</androidx.constraintlayout.widget.ConstraintLayout>